<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/accent</item>

        <item name="materialCardViewStyle">@style/card_style</item>

        <!-- Style to use for Snackbars in this theme. -->
        <!--<item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>-->

        <!-- Style to use for action button within a Snackbar in this theme. -->
        <item name="snackbarButtonStyle">@style/snackbar_button</item>

        <!-- Style to use for message text within a Snackbar in this theme. -->
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>

        <item name="android:datePickerDialogTheme" tools:targetApi="lollipop">
            @style/DatePickerDialog
        </item>

        <!--<item name="android:alertDialogTheme" tools:targetApi="lollipop">
            @style/AlertDialog
        </item>-->
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Button Rounded style -->
    <style name="ButtonRounded" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_rounded_rectangle_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonRoundedIdle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_rounded_idle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Button Capsule -->
    <style name="ButtonPrimary">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="ButtonPrimaryOutline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_color</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="ButtonPrimaryCapsule" parent="ButtonPrimary">
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="ButtonPrimaryRoundedRectangle" parent="ButtonPrimary">
        <item name="cornerRadius">5dp</item>
    </style>

    <!-- BUTTON -->
    <style name="ButtonCapsule">
        <item name="android:background">@drawable/btn_capsule</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonCapsuleIdle">
        <item name="android:background">@drawable/btn_capsule_idle</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LabelText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButtonAlignStart" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ToolbarWhiteBackArrow" parent="AppTheme">
        <item name="colorControlNormal">?attr/colorControlNormal</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- SNACKBAR -->
    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TEXT INPUT LAYOUT -->
    <style name="TextInputLayout.Outline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorControlNormal</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- CARD -->
    <style name="card_style" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="DatePickerDialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/DialogTextButton</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/DialogTextButton</item>
    </style>

    <style name="AlertDialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/DialogTextButton</item>
    </style>

    <style name="DialogTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">@color/accent</item>
    </style>
</resources>
