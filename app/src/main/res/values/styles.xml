<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/icon_color</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Style to use for Snackbars in this theme. -->
        <!--<item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>-->

        <!-- Style to use for action button within a Snackbar in this theme. -->
        <item name="snackbarButtonStyle">@style/snackbar_button</item>

        <!-- Style to use for message text within a Snackbar in this theme. -->
        <item name="snackbarTextViewStyle">@style/SnackBar.Text</item>

        <!-- POPUP Menu Style -->
        <item name="popupMenuStyle">@style/MyPopupMenu</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheet</item>
    </style>

    <!-- Special Theme -->
    <style name="SpecialTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorOnSurface">@color/icon_color</item>
        <item name="colorPrimary">@color/accent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Style to use for action button within a Snackbar in this theme. -->
        <item name="snackbarButtonStyle">@style/snackbar_button</item>

        <!-- TextInput Style -->
        <item name="textInputStyle">@style/TextInputLayout</item>

        <!-- Style to use for message text within a Snackbar in this theme. -->
        <item name="snackbarTextViewStyle">@style/SnackBar.Text</item>
    </style>

    <style name="VideoTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorOnSurface">@color/icon_color</item>
        <item name="colorPrimary">@color/accent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Button Rounded style -->

    <!-- Button Capsule -->
    <style name="ButtonPrimary">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="ButtonPrimaryOutline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/grey_85</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="ButtonPrimaryCapsule" parent="ButtonPrimary">
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="ButtonPrimaryRoundedRectangle" parent="ButtonPrimary">
        <item name="cornerRadius">5dp</item>
    </style>

    <!-- BUTTON -->
    <style name="ButtonCapsule">
        <item name="android:background">@drawable/btn_capsule</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LabelText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingHorizontal" tools:targetApi="o">8dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:background">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ToolbarRegister" parent="SpecialTheme">
        <item name="android:background">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ToolbarWhiteBackArrow" parent="AppTheme">
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:height">50dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- SNACKBAR -->

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="SnackBar.Text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TEXT INPUT LAYOUT -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/layout_background_color</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <!-- CARD -->

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

    <!--<style name="DatePickerDialog" parent="Theme.MaterialComponents.DayNight.Dialog" tools:targetApi="lollipop">
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogNegativeButton</item>
    </style>-->

    <style name="DialogPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Styleable Toast -->
    <style name="PlaymiToast">
        <item name="stColorBackground">@color/accent</item>
        <item name="stSolidBackground">true</item>
        <item name="stRadius">10dp</item>
        <item name="stTextSize">14sp</item>
        <item name="stTextColor">@color/white</item>
    </style>

    <style name="PlaymiMaterialDialog" parent="Theme.MaterialComponents.Dialog" tools:targetApi="lollipop">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogPositiveButton</item>
    </style>

    <style name="BottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <!--  Date picker style  -->
    <style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="android:buttonBarButtonStyle">@style/MySpinnerDatePicker.Button</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MySpinnerDatePicker.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
