<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.islaami.playmi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="id.islaami.playmi.PlaymiApp"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity android:name=".ui.setting.policy.PolicyActiviy" />
        <activity android:name=".ui.setting.help.WebHelpActivity" />
        <activity android:name="id.islaami.playmi.VerificationActivity" />
        <activity
            android:name=".ui.video.VideoDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:parentActivityName=".ui.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="islaami.id"
                    android:pathPrefix="/videos"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:theme="@style/RegisterTheme">

            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".ui.channel.ChannelDetailActivity"
            android:launchMode="singleTop" />
        <activity android:name=".ui.setting.recommendation.RecommendationActivity" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:theme="@style/RegisterTheme" />
        <activity android:name=".ui.MainActivity">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ui.video.VideoSearchActivity" />
        </activity>
        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:launchMode="singleTop" />
        <activity android:name=".ui.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="islaami.id"
                    android:pathPattern="/verify"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.intro.IntroActivity" />
        <activity
            android:name=".ui.intro.LauncherActivity"
            android:theme="@style/AppTheme.Launcher">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.playlist.PlaylistDetailActivity"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".ui.playlist.WatchLaterActivity" />
        <activity android:name=".ui.setting.report.ReportActivity" />
        <activity android:name=".ui.setting.insight.InsightActivity" />
        <activity android:name=".ui.setting.collaborate.CollaborateActivity" />
        <activity android:name=".ui.auth.ResetPasswordActivity" />
        <activity android:name=".ui.auth.CompleteProfileActivity" />
        <activity
            android:name=".ui.video.VideoSearchActivity"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ui.video.VideoSearchActivity" />
        </activity>
        <activity android:name=".ui.channel.ChannelVideoActivity" />

        <!-- METAS -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <!--Set custom default icon. This is used when no icon is set for incoming notification messages.
             See README(https://goo.gl/l4GJaQ) for more.-->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/app_icon" />

        <!--Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.-->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/accent" />

        <!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1757420955153670~4087157585" />

        <!-- PROVIDERS -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="id.islaami.playmi.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- SERVICES -->
        <service
            android:name="id.islaami.playmi.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>